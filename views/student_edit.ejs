<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container card mt-4 mb-5">
  <h2 class="card-header text-center bg-gray-900" style="background-color: lightseagreen; color: white;"><%= title %></h2>
  <div class="card-body">
    <form action="/UpdateStudent" method="post">
        <!-- ---------- student id----------- -->
        <div class="form-group">
            <label for="student_id">PDF ID</label>
            <input type="text" class="form-control" id="student_id" name="student_id" placeholder="Enter Student ID" value="<%= selected_student.student_id %>" required readonly/>
          </div>


        <!-- 1. first name / Last name -->
        <div class="form-row">
            <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <label class="form-label" for="first_name">1. First name</label>
                    <input type="text" id="first_name" class="form-control" name="first_name" value="<%= selected_student.first_name %>"  required />
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <label class="form-label" for="last_name">2. Last Name</label>
                    <input type="text" id="last_name" class="form-control" name="last_name" value="<%= selected_student.last_name %>" required />
                </div>
            </div>
        </div>


        <!-- 2. email / ph no -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <label class="form-label" for="email">3. Email ID</label>
                    <input type="email" id="email" class="form-control" name="email" value="<%= selected_student.email %>" required />
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <label class="form-label" for="ph_no">4. Phone No</label>
                    <input type="number" id="ph_no" class="form-control" name="ph_no" value="<%= selected_student.ph_no %>" required />
                </div>
            </div>
        </div>


        <!-- 3. gurdian name / ph no -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <label class="form-label" for="gurdian_name">5. Gurdian Name</label>
                    <input type="text" id="gurdian_name" class="form-control" name="gurdian_name" value="<%= selected_student.gurdian_name %>" required />
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <label class="form-label" for="gurdian_ph">6. Gurdian Contact No</label>
                    <input type="number" id="gurdian_ph" class="form-control" name="gurdian_ph" value="<%= selected_student.gurdian_ph %>" required />
                </div>
            </div>
        </div>


        <!-- 4. gender / date of birth / education_level / course_section -->
        <div class="row" style="text-align: left;">
            <div class="form-group col-md-3 mb-4">
                <label for="gender" class="form-label">7. Gender</label>
                <select id="gender" name="gender" class="form-control" required>
                  <!-- <option value="<%= selected_student.gender %>"><%= selected_student.gender %></option> -->
                  <option value="Male" <% if (selected_student.gender==="Male") { %>Selected <% } %> >Male</option>
                  <option value="Female" <% if (selected_student.gender==="Female") { %>Selected <% } %> >Female</option>
                  <option value="Others" <% if (selected_student.gender==="Others") { %>Selected <% } %> >Others</option>
                </select>
            </div>
            <div class="form-group col-md-3 mb-4">
                <label for="date_of_birth" class="form-label mb-1">8. Date of Birth</label>
                <input type="date" id="date_of_birth" class="form-control" name="date_of_birth" value="<%= selected_student.date_of_birth %>" required />
            </div>
            <div class="form-group col-md-3 mb-4">
              <label for="education_level" class="form-label">9. Education Level</label>
              <select id="education_level" name="education_level" class="form-control addCourse" required>
                <!-- <option value="<%= selected_student.education_level %>"><%= selected_student.education_level %></option> -->
                <option value="School" <% if (selected_student.education_level==="School") { %>Selected <% } %> >School</option>
                <option value="B.Sc Honours" <% if (selected_student.education_level==="B.Sc Honours") { %>Selected <% } %> >B.Sc Honours</option>
                <option value="B.Sc General" <% if (selected_student.education_level==="B.Sc General") { %>Selected <% } %> >B.Sc General</option>
                <option value="BCA" <% if (selected_student.education_level==="BCA") { %>Selected <% } %> >BCA</option>
                <option value="Entrance" <% if (selected_student.education_level==="Entrance") { %>Selected <% } %> >Entrance Exam</option>
              </select>
            </div>
            <div class="form-group col-md-3 mb-4">
              <label for="course_section" class="form-label">10. Course Section</label>
              <select id="course_section" name="course_section" class="form-control addCategory" required>
                <option value="Class XI" <% if (selected_student.course_section==="Class XI") { %>Selected <% } %> >Class XI</option>
                <option value="Class XII" <% if (selected_student.course_section==="Class XII") { %>Selected <% } %> >Class XII</option>
                <option value="Semester 1" <% if (selected_student.course_section==="Semester 1") { %>Selected <% } %> >Semester 1</option>
                <option value="Semester 2" <% if (selected_student.course_section==="Semester 2") { %>Selected <% } %> >Semester 2</option>
                <option value="Semester 3" <% if (selected_student.course_section==="Semester 3") { %>Selected <% } %> >Semester 3</option>
                <option value="Semester 4" <% if (selected_student.course_section==="Semester 4") { %>Selected <% } %> >Semester 4</option>
                <option value="Semester 5" <% if (selected_student.course_section==="Semester 5") { %>Selected <% } %> >Semester 5</option>
                <option value="Semester 6" <% if (selected_student.course_section==="Semester 6") { %>Selected <% } %> >Semester 6</option>
                <option value="JEE" <% if (selected_student.course_section==="JEE") { %>Selected <% } %> >JEE</option>
                <option value="M.Sc" <% if (selected_student.course_section==="M.Sc") { %>Selected <% } %> >M.Sc</option>
                <option value="S.S.C" <% if (selected_student.course_section==="S.S.C") { %>Selected <% } %> >S.S.C</option>
              </select>
            </div>
        </div>


        <!-- 5. institution -->
        <div class="form-outline mb-4">
            <label class="form-label" for="institution">11. Institution</label>
            <input type="text" id="institution" name="institution" class="form-control" value="<%= selected_student.institution %>" required/>
        </div>


        <!-- 6. Address -->
        <div class="form-outline mb-4">
            <label class="form-label" for="address">12. Address</label>
            <input type="text" id="address" name="address" class="form-control" value="<%= selected_student.address %>" required/>
        </div>


        <!-- 7. password and active permission -->
        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="form-outline">
                    <label class="form-label" for="password">13. Password</label>
                    <input type="password" id="password" class="form-control" placeholder="If You Want to Change Password Then Enter New Password" name="password" value=""/>
                </div>
            </div>
            <div class="form-group col-md-4 mb-4">
                <label for="permission" class="form-label">14. Permission Status</label>
                <select id="permission" name="permission" class="form-control" required>
                  <option value="Approve" <% if (selected_student.permission==="Approve") { %>Selected <% } %> >Approve</option>
                  <option value="Decline" <% if (selected_student.permission==="Decline") { %>Selected <% } %> >Decline</option>
                </select>
            </div>
        </div>

        <!-- 8.Registration Date Time -->
        <div class="form-outline mb-4">
            <label class="form-label" for="reg_DateTime">15. Registration Date Time</label>
            <input type="text" id="reg_DateTime" name="reg_DateTime" class="form-control" value="<%= selected_student.reg_DateTime %>" readonly/>
        </div>


        <!-- 9. Payment Status -->
        <div class="card-body border border-primary pt-0 pl-0 pr-0 mb-4">
            <h4 class="block p-1 text-center" style="background-color: lightseagreen; color: white;">Payments</h4>
            <div class="row pl-md-5 pl-3">
                <div class="row col-md-4 mb-4">
                    <!-- 1.january -->
                    <div class="form-group col">
                        <label for="january" class="form-label" <% if (payment.january==="received") { %>style="color:green; font-weight: bold;"<% } %> >1.January</label>
                        <select id="january" name="january" class="form-control" required>
                        <option value="received"<% if (payment.january==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.january==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                    <!-- 2. February -->
                    <div class="form-group col">
                        <label for="february" class="form-label" <% if (payment.february==="received") { %>style="color:green; font-weight: bold;"<% } %> >2.February</label>
                        <select id="february" name="february" class="form-control" required>
                        <option value="received"<% if (payment.february==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.february==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                </div>
                
                <div class="row col-md-4 mb-4">
                    <!-- 3. March -->
                    <div class="form-group col">
                        <label for="march" class="form-label" <% if (payment.march==="received") { %>style="color:green; font-weight: bold;"<% } %> >3.March</label>
                        <select id="march" name="march" class="form-control" required>
                        <option value="received"<% if (payment.march==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.march==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                    <!-- 4. April -->
                    <div class="form-group col">
                        <label for="april" class="form-label" <% if (payment.april==="received") { %>style="color:green; font-weight: bold;"<% } %> >4.April</label>
                        <select id="april" name="april" class="form-control" required>
                        <option value="received"<% if (payment.april==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.april==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                </div>

                <div class="row col-md-4 mb-4">
                    <!-- 5. May -->
                    <div class="form-group col">
                        <label for="may" class="form-label" <% if (payment.may==="received") { %>style="color:green; font-weight: bold;"<% } %> >5.May</label>
                        <select id="may" name="may" class="form-control" required>
                            <option value="received"<% if (payment.may==="received" ) { %>Selected <% } %>>Received</option>
                            <option value="pending"<% if (payment.may==="pending" ) { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                    <!-- 6. June -->
                    <div class="form-group col">
                        <label for="june" class="form-label" <% if (payment.june==="received") { %>style="color:green; font-weight: bold;"<% } %> >6.june</label>
                        <select id="june" name="june" class="form-control" required>
                        <option value="received"<% if (payment.june==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.june==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row pl-md-5 pl-3">
                <div class="row col-md-4 mb-4">
                    <!-- 7.July -->
                    <div class="form-group col">
                        <label for="july" class="form-label" <% if (payment.july==="received") { %>style="color:green; font-weight: bold;"<% } %> >7.July</label>
                        <select id="july" name="july" class="form-control" required>
                        <option value="received"<% if (payment.july==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.july==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                    <!-- 8. August -->
                    <div class="form-group col">
                        <label for="august" class="form-label" <% if (payment.august==="received") { %>style="color:green; font-weight: bold;"<% } %> >8.August</label>
                        <select id="august" name="august" class="form-control" required>
                        <option value="received"<% if (payment.august==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.august==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                </div>
                
                <div class="row col-md-4 mb-4">
                    <!-- 9. September -->
                    <div class="form-group col">
                        <label for="september" class="form-label" <% if (payment.september==="received") { %>style="color:green; font-weight: bold;"<% } %> >9.September</label>
                        <select id="september" name="september" class="form-control" required>
                        <option value="received"<% if (payment.september==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.september==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                    <!--10. October -->
                    <div class="form-group col">
                        <label for="october" class="form-label" <% if (payment.october==="received") { %>style="color:green; font-weight: bold;"<% } %> >10.October</label>
                        <select id="october" name="october" class="form-control" required>
                        <option value="received"<% if (payment.october==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.october==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                </div>

                <div class="row col-md-4 mb-4">
                    <!-- 11. November -->
                    <div class="form-group col">
                        <label for="november" class="form-label" <% if (payment.november==="received") { %>style="color:green; font-weight: bold;"<% } %> >11.November</label>
                        <select id="november" name="november" class="form-control" required>
                        <option value="received"<% if (payment.november==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.november==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                    <!-- 12. December -->
                    <div class="form-group col">
                        <label for="december" class="form-label" <% if (payment.december==="received") { %>style="color:green; font-weight: bold;"<% } %> >12.December</label>
                        <select id="december" name="december" class="form-control" required>
                        <option value="received"<% if (payment.december==="received") { %>Selected <% } %> >Received</option>
                        <option value="pending"<% if (payment.december==="pending") { %>Selected <% } %> >Pending</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

      <button type="submit" class="btn btn-primary">UPDATE</button>
    </form>
  </div>
</div>

</body>
</html>